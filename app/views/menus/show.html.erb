<div class="container menu-display"
  <h1>Lunch Menu</h1>

  <h1>Dinner Menu</h1>
  <h3 class="menu-category-big">Appetizers</h3>
  <div class="row">
    <% @items.each_slice(3) do |items| %>
      <% items.each do |item| %>
        <% if item.category == "Appetizers" %>
          <div class="col-md-4 item-entry">
            <div class="item-title">
              <%= item.title %>
            </div>
            <div class="pull-right">
              <%= item.price %>
            </div>
          </div>
        <% end %>
      <% end %>
      <% (3 - items.length).times.each do |fake_div| %>
        <div class="item empty">
        </div>
      <% end %>
    <% end %>
  </div>

